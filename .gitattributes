# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

*.md text
*.txt text

*.yml text

*.dat binary
*.gif binary
*.nbt binary
*.ogg binary
*.png binary
*.rcbp binary
*.rcdp binary
*.rcmt binary
*.rcp binary
*.rcst binary


[diff "png"]
	textconv = exif
	cachetextconv = true

[diff "jpg"]
	textconv = exif
	cachetextconv = true

[diff "bin"]
	textconv = exif
	cachetextconv = false

	*.bin diff=bin