# Auto detect text and leave all files detected as binary untouched.
# Set default behaviour to automatically normalize line endings.
* text=auto

# Source code
*.cmd             text eol=crlf
*.coffee          text
*.css             text
*.htm             text diff=html
*.html            text diff=html
*.inc             text
*.ini             text
*.js              text
*.json            text
*.jsx             text
*.less            text
*.ls              text
*.map             text -diff
*.od              text
*.onlydata        text
*.php             text diff=php
*.pl              text
*.ps1             text
*.py              text diff=python
*.rb              text diff=ruby
*.sass            text
*.scm             text
*.scss            text diff=css
*.sh              text eol=lf
*.sql             text
*.styl            text
*.tag             text
*.ts              text
*.tsx             text
*.xml             text
*.xhtml           text diff=html

# Force batch scripts to always use CRLF line endings so that if a repository is accessed
# in Windows via a file share from Linux, the scripts will work.
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force bash scripts to always use LF line endings so that if a repository is accessed
# in Unix via a file share from Windows, the scripts will work.
*.sh text eol=lf

[diff "pdf"]
    textconv=exif
    cachetextconv = true

    *.pdf filter=lfs diff=lfs merge=lfs -text

# Encrypt the repository
*.* filter=git-crypt diff=git-crypt
.gitattributes !filter !diff
.gitignore !filter !diff

